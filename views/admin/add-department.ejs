<%- include('../includes/head.ejs') %>
<main>
    <form action="/admin/departments/add-department" method="post">
        <label for="name">Название отдела*: </label>
        <input type="text" name="name" id="name" required><br>
        <label for="adress">Адрес*:</label>
        <input type="text" name="adress" id="adress"><br>
        <input type="hidden" name="userId" value="<%= userId %>">
        <button type="submit">Зарегистрировать отдел</button>
    </form>
    <a href="/admin/<%= userId %>/departments">Назад</a>
</main>
<%- include('../includes/end.ejs') %>