<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs', {panel: 'admin'}) %>
<div class="container">
    <main>
        <div class="row">
            <% for (let department of departments) {%>
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                      <img class="activator" src="<%= department.imageURL %>" alt="<%= department.name %>">
                    </div>
                    <div class="card-content">
                      <span class="card-title activator grey-text text-darken-4"><%= department.name %><i class="material-icons right">more_vert</i></span>
                      <div class="row">
                        <a class="col s4 btn white orange-text lighten-1 offset-s5 waves-effect waves-light" href="/admin/<%= userId %>/departments/edit-department/<%= department.id %>">Редактировать</a>
                        <form class="col s1 offset-s20" action="/admin/departments/delete-department" method="post">
                            <input type="hidden" name="userId" value="<%= userId %>">
                            <input type="hidden" name="departmentId" value="<%= department.id %>">
                            <button class="btn-floating red waves-effect waves-light" type="submit"><i class="material-icons">delete</i></button>
                        </form>
                      </div>
                    </div>
                    <div class="card-reveal">
                      <span class="card-title grey-text text-darken-4"><%= department.name %><i class="material-icons right">close</i></span>
                      <p><%= department.description %> <br> Находится по адресу: <%= department.adress %></p>
                    </div>
                  </div>
            <% }; %>
        </div>
        <div class="fixed-action-btn">
            <a href="/admin/<%= userId %>/departments/add-department" class="btn-floating btn-large red">
              <i class="large material-icons">add</i>
            </a>
        </div>
    </main>
</div>
<div class="row"></div>
<%- include('../includes/end.ejs') %>