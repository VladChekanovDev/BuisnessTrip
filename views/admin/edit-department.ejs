<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs', {panel: 'admin'}) %>
<div class="container">
    <main class="row valign-wrapper">
        <form class="col s6 offset-s3" action="/admin/departments/edit-department" method="post">
            <div class="row">
                <div class="input-field">
                    <label for="name">Название отдела*</label>
                    <input class="validate" type="text" name="name" id="name" value="<%= department.name %>" required><br>
                    <span class="helper-text" data-error="Заполните поле"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <label for="adress">Адрес*</label>
                    <input class="validate" type="text" name="adress" id="adress" value="<%= department.adress %>" required><br>
                    <span class="helper-text" data-error="Заполните поле"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <label for="description">Описание</label>
                    <textarea class="materialize-textarea" name="description" id="description" cols="30" rows="10" required><%= department.description %></textarea>
                    <span class="helper-text" data-error="Заполните поле"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <label for="imageURL">URL фотографии*</label>
                    <input class="validate" type="text" name="imageURL" id="imageURL" value="<%= department.imageURL %>" required>
                    <span class="helper-text" data-error="Заполните поле"></span>
                </div>
            </div>
            <input type="hidden" name="userId" value="<%= userId %>">
            <div class="row">
                <input type="hidden" name="userId" value="<%= userId %>">
                <input type="hidden" name="departmentId" value="<%= department.id %>">
                <button type="submit" class="btn col s4 offset-s2">Отредактировать</button>
                <a class="btn red col s2 offset-s1" href="/admin/<%= userId %>/departments">Назад</a>
            </div>
        </form>
    </main>
</div>
<%- include('../includes/end.ejs') %>