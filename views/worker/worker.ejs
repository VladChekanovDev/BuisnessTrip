<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs', {panel: 'worker'}) %>
<div class="container">
    <main class="valign-wrapper onescreen row">
        <div class="col s12">
            <h2 class="header">Здравствуйте <%= worker.getInitials %></h2>
            <div class="card large">
                <div class="card-image">
                    <img src="<%= worker.imageURL %>" alt="<%= worker.lastName %>">
                </div>
                <div class="card-content">
                    <p>Работаете с: <%= worker.dateOfHiring %> <br> ЗП: <%= worker.salary %> руб <br> Отдел: <%= worker.department.name %> </p>
                  </div>
                <div class="card-action">
                    <a href="/worker/<%= userId %>/change-password" class="btn white orange-text waves-effect lighten-1">Сменить пароль</a>
                    <a href="/worker/<%= userId %>/change-login" class="btn white orange-text waves-effect lighten-1">Сменить логин</a>
                </div>
            </div>
        </div>
    </main>
</div>
<%- include('../includes/end.ejs') %>