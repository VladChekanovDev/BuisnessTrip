<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs', {panel: 'worker'}) %>

<div class="container">
    <main class="valign-wrapper onescreen row">
        <form class="col s12" action="/worker/change-login" method="post">
            <div class="row">
                <div class="input-field">
                    <label for="new-password">Новый логин*</label>
                    <input class="validate" type="text" name="newLogin" id="new-login" required><br>
                    <span class="helper-text" data-error="Заполните поле"></span>
                </div>
            </div>
            <div class="row">
                <input type="hidden" name="userId" value="<%= userId %>">
                <input type="hidden" name="workerId" value="<%= worker.id %>">
                <button class="btn orange lighten-1 waves-effect col s3 offset-s6" type="submit">Изменить логин</button>
                <a class="btn red col s2 offset-s1" href="/worker/<%= userId %>">Назад</a>
            </div>
        </form>
    </main>
</div>
<%- include('../includes/end.ejs') %>