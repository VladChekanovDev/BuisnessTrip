<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs', {panel: 'chief'}) %>
<div class="container">
    <main>
        <div class="row">
          <div class="row"></div>
          <% let counter = 0; %>
            <% for (let station of stations) {%>
                <div class="card col s5 <%= (counter % 2 == 1) ? 'offset-s1' : '' %>">
                    <div class="card-image waves-effect waves-block waves-light">
                      <img class="activator" src="<%= station.imageURL %>">
                    </div>
                    <div class="card-content">
                      <span class="card-title activator grey-text text-darken-4"><%= station.name %><i class="material-icons right">more_vert</i></span>
                      <div class="row">
                        <a class="btn white orange-text lighten-1 waves-effect col s5" href="/chief/<%= userId %>/stations/edit-station/<%= station.id %>">Редактировать</a>
                        <form class="col s3 offset-s4" action="/chief/stations/delete-station" method="post">
                            <input type="hidden" name="stationId" value="<%= station.id %>">
                            <input type="hidden" name="userId" value="<%= userId %>">
                            <button class="btn-floating waves-effect red" type="submit"><i class="material-icons">delete</i></button>
                        </form>
                      </div>
                    </div>
                    <div class="card-reveal">
                      <span class="card-title grey-text text-darken-4"><%= station.name %><i class="material-icons right">close</i></span>
                      <p><%= station.description %></p>
                    </div>
                </div>
            <% counter++ }; %>
        </div>
        <div class="fixed-action-btn">
            <a class="btn-floating waves-effect btn-large red" href="/chief/<%= userId %>/stations/add-station">
              <i class="large material-icons">add</i>
            </a>
        </div>
    </main>
</div>
<%- include('../includes/end.ejs') %>