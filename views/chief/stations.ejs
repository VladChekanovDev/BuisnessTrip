<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs', {panel: 'chief'}) %>
<main>
    <a href="/chief/<%= userId %>/stations/add-station">Добавить точку назначения</a>
    <h1>Точки назначения: </h1>
    <% for (let station of stations) {%>
        <h2><%= station.name %></h2>
        <h2><%= station.adress %></h2>
        <form action="/chief/stations/delete-station" method="post">
            <input type="hidden" name="stationId" value="<%= station.id %>">
            <input type="hidden" name="userId" value="<%= userId %>">
            <button type="submit">Удалить</button>
        </form>
        <a href="/chief/<%= userId %>/stations/edit-station/<%= station.id %>">Редактировать</a>
        <hr>
    <% }; %>
    <a href="/chief/<%= userId %>">На главную</a>
</main>
<%- include('../includes/end.ejs') %>