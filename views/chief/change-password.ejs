<%- include('../includes/head.ejs') %>
<%- include('../includes/header.ejs', {panel: 'worker'}) %>

<div class="container">
    <main class="valign-wrapper onescreen row">
        <form class="col s12" action="/chief/change-password" method="post">
            <div class="row">
                <div class="input-field">
                    <label for="new-password">Новый пароль*</label>
                    <input class="validate" type="password" name="newPassword" id="new-password" required><br>
                    <span class="helper-text" data-error="Заполните поле"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <label for="repeat-new-password">Повторите новый пароль*</label>
                    <input class="validate" type="password" name="repeatNewPassword" id="repeat-new-password" required><br>
                    <span class="helper-text" data-error="Заполните поле"></span>
                </div>
            </div>
            <div class="row">
                <input type="hidden" name="userId" value="<%= userId %>">
                <input type="hidden" name="workerId" value="<%= chief.id %>">
                <button class="btn orange lighten-1 waves-effect col s3 offset-s6" type="submit">Изменить пароль</button>
                <a class="btn red col s2 offset-s1" href="/chief/<%= userId %>">Назад</a>
            </div>
        </form>
    </main>
</div>
<%- include('../includes/end.ejs') %>